
<script id='layout' type='text/x-handlebars-template'>
  <div class='navigation'>
  <ul>
    <li><a href='#' class='index'>All Links</a></li>
    <li><a href='#' class='create'>Shorten</a></li>
    <li><a href='#' class='login'>Login</a></li>
    <li><a href='#' class='signup'>Sign Up</a><li>
  </ul>
  </div>
  <div id='container'></div>
</script>

<script id='link' type='text/x-handlebars-template'>
  <img src='/redirect_icon.png'/>
  <div class='info'>
    <div class='visits'><span class='count'>{{visits}}</span>Visits</div>
    <div class='title'>{{title}}</div>
    <div class='original'>{{url}}</div>
    <a href='{{baseUrl}}/{{code}}'>{{baseUrl}}/{{code}}</a>
  </div>
</script>

<script id='create' type='text/x-handlebars-template'>
  <form>
      <input class='text' placeholder='http://' type='text' name='url'>
      <input type='submit' value='Shorten'>
  </form>
  <img class='spinner' src='/spiffygif_46x46.gif'>
  <div class='message'></div>
</script>

<script id='signup' type='text/x-handlebars-template'>
  <h2>Sign up</h2>
  <form action="/signup" method="post">
      <div>
        <label for="username">Username:</label>
        <input id="username" type="text" name="username">
      </div>
      <div>
        <label for="password">Password:</label>
        <input id="password" type="password" name="password">
      </div>
      <div>
        <input type="submit" value="Sign up">
      </div>
  </form>
  <p>
    <a href="/login">Login to your account &rarr;</a>
  <p>
</script>


<script id='login' type='text/x-handlebars-template'>
  <h2>Login</h2>
  <form action="/login" method="post">
      <div>
        <label for="username">Username:</label>
        <input id="username" type="text" name="username">
      </div>
      <div>
        <label for="password">Password:</label>
        <input id="password" type="password" name="password">
      </div>
      <div>
        <input type="submit" value="Login">
      </div>
  </form>
  <p>
    <a href="/signup">Create an Account &rarr;</a>
  <p>
</script>

<script>
  window.Templates = {};
  $('[type="text/x-handlebars-template"]').each(function(index, div){
    Templates[div.id] = Handlebars.compile(div.innerHTML);
  });
</script>
